<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/lib/bootstrap-select")
    @Styles.Render("~/lib/jquery-datatables")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("~/Views/Shared/_Modals.cshtml")
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Admin", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole("Operator Cedacri"))
                    {
                        <li>@Html.ActionLink("Documents", "Index", "Document", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole("Operator Bancar"))
                    {
                        <li>@Html.ActionLink("Operator Bancar", "Index", "Bank", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                var userName = Context.User.Identity.Name;
                <div class="d-flex">
                    <ul class="navbar-nav">
                        <li>
                            <a class="btn btn-outline-danger" href="@Url.Action("Logout", "Account")">
                                Logout<br /> @userName
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/bootstrap-select")
    @RenderSection("scripts", required: false)
</body>
</html>
