@model BLL.DTO.ProjectDTOs.ProjectDetailDto

<div class="modal-body">
    <div class="container">
        <h2 class="text-center mb-4">Project Details</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name", @readonly = "readonly", @disabled = true })
                    @Html.LabelFor(model => model.Name)
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="isActive" disabled @if (Model.IsActive) { <text> checked</text> }>
                    <label class="form-check-label" for="isActive">Active</label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.InstitutionName, new { @class = "form-control", @placeholder = "Institution Name", @readonly = "readonly", @disabled = true })
                    @Html.LabelFor(model => model.InstitutionName)
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="form-control" id="dateFrom" value="@Model.DateFrom.ToString("yyyy-MM-dd")" readonly disabled />
                    <label for="dateFrom">Date From</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="form-control" id="dateTill" value="@Model.DateTill.ToString("yyyy-MM-dd")" readonly disabled />
                    <label for="dateTill">Date Till</label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea id="additionalInfo" rows="3" class="form-control" placeholder="Additional Info" disabled readonly style="resize: none;">@Model.AdditionalInfo</textarea>
                    <label for="additionalInfo">Additional Info</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</div>
