@model  List<BLL.DTO.BankDTOs.ProjectGroupTreeVm>


<br />

<div class="card checkout-order-summary">
    <div class="card-body">
        <div class="report-container">
            @if (Model.Count == 0)
            {
                <div class="year">No has data</div>
            }
            @foreach (var mainYear in Model)
            {
                <div class="year" onclick="HideAndShow(this)">@mainYear.Year</div>
                <ul class="report-list" style="display: none;">
                    @foreach (var project in mainYear.ProjectGroups)
                    {
                        <li>
                            <span class="caret">@project.ProjectName</span>
                            <ul class="nested" style="display: none;">
                                @foreach (var projectType in project.ProjectTypes)
                                {
                                    <li>
                                        <span class="caret">@projectType.Name @($"({projectType.Count})")</span>
                                        <ul class="nested" style="display: none;">
                                            @foreach (var report in projectType.Reports)
                                            {
                                                <li class="report-item" onclick="loadReportDetails(@report.Id)">@report.Text</li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

