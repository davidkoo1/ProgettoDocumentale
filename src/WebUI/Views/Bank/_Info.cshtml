@model BLL.DTO.DocumentDTOs.DocumentDetailDto
<div class="card-body">
    <div class="p-3 bg-light mb-4">
        <h5 class="font-size-16 mb-0">Document name <span class="float-end ml-2">@Model.Name</span></h5>
    </div>
    <div class="table-responsive">
        <table class="table table-centered mb-0 table-nowrap">
            @*<thead>
                    <tr>
                        <th class="border-top-0" style="width: 110px;" scope="col" colspan="2">Institution</th>
                        <th class="border-top-0" scope="col">Type</th>
                    </tr>
                </thead>*@
            <tbody>
                <tr>
                    <th scope="row" colspan="2">@Model.Institution</th>
                    <td>
                        <h5 class="font-size-14 text-truncate">@Model.MacroType</h5>
                        <p class="text-muted mb-0">@Model.MicroType</p>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <h5 class="font-size-14 m-0">Project :</h5>
                    </td>
                    <td>
                        @Model.Project
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <h5 class="font-size-14 m-0">Grouping Date :</h5>
                    </td>
                    <td>
                        @Model.DataGroup
                    </td>
                </tr>

                <tr>
                    <td colspan="2">
                        <h5 class="font-size-14 m-0">AdditionalInfo :</h5>
                    </td>
                    <td>
                        @Model.AdditionalInfo
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <h5 class="font-size-14 m-0">User :</h5>
                    </td>
                    <td>
                        User
                    </td>
                </tr>

                
            </tbody>
        </table>

    </div>
</div>


